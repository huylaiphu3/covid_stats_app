<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnCases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Cases"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDeaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Deaths"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Summary"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnPrevention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Prevention Tips"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Symptoms"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnTestingInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Testing Info"/>
</LinearLayout>
